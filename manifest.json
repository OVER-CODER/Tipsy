{
  "manifest_version": 3,
  "name": "Error Helper Extension",
  "version": "1.0.0",
  "description": "Get solutions and references for errors instantly.",
  "permissions": ["storage","activeTab", "scripting"],
  "background": {
    "service_worker": "content/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
  "default_popup": "popup/out/index.html",
  "default_title": "Error Helper"
  },
  "icons": {
    "48": "public/icon.png",
    "128": "public/icon.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
